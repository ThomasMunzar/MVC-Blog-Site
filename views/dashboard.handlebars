<h1>Dashboard</h1>
<form id="postForm" action="/api/posts" method="POST">
    <div>
        <label>
            Title
        </label>
        <input id="title" name="title">
    </div>
    <div>
        <label>
            Content
        </label>
        <textarea id="content" name="content"> </textarea>
    </div>
    <button type="submit">Submit</button>
 </form>

 <div>
    <h2> Your Posts:</h2>
    {{#each posts}}
    <div class="post">
        <h3>{{title}}</h3>
        <p>{{content}}</p>
    </div>
    {{/each}}
 </div>